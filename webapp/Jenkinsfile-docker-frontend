pipeline {
    agent {
      label 'kubernetes'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('dockerid')
     registry = "prasanthrk/frontend"
        registryCredential = 'dockerid'
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && sudo docker build -t prasanthrk/frontend .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'sudo docker push prasanthrk/frontend'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'sudo docker rmi -f prasanthrk/frontend'
            }
        }
         stage('deploy on kubernetes') {
            steps {
                echo 'Deploying....'
                sh "cd webapp && kubectl apply -f frontend-deployment.yaml"
                sh "cd webapp && kubectl apply -f frontend-load-balancer-service.yaml"
                sh "kubectl rollout restart deployment frontend-deployment"
            }
        }
    }
}
